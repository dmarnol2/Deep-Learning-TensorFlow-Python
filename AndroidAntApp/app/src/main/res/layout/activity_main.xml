<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    tools:context="com.example.antapp.MainActivity"
    tools:layout_editor_absoluteY="25dp">


    <Button
        android:id="@+id/button"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:layout_marginBottom="133dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="62dp"
        android:text="More Info"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="236dp"
        android:layout_height="47dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="62dp"
        android:layout_marginStart="62dp"
        android:text="Enter Site"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"

        android:layout_width="wrap_content"
        android:layout_height="53dp"

        android:layout_marginBottom="42dp"
        android:text="Using Artificial Intelligence to identify and classify your images"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_marginBottom="24dp"

        android:layout_marginEnd="75dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="36dp"
        android:text="Ant Classifier"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="363dp"
        android:layout_height="146dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/asu"
        tools:layout_editor_absoluteX="0dp" />

</android.support.constraint.ConstraintLayout>
